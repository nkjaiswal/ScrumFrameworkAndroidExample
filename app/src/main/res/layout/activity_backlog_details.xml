<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.myconnectedhome.scrumtool.BacklogDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/bd_desc"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/bd_status"
        android:layout_below="@+id/bd_desc"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/bd_effort"
        android:layout_below="@+id/bd_status"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comments"
        android:id="@+id/textView10"
        android:layout_below="@+id/bd_effort"
        android:layout_alignParentStart="true" />
    <ListView
        android:id="@+id/bd_comments"
        android:layout_below="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Developer"
        android:id="@+id/textView13"
        android:layout_below="@+id/bd_comments"
        android:layout_alignParentStart="true" />
    <ListView
        android:id="@+id/bd_developer"
        android:layout_below="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_menu_sort_alphabetically"
        android:onClick="onCommentClick" />
</RelativeLayout>
