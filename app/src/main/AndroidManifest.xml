<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.myconnectedhome.scrumtool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterUserActivity" />
        <activity android:name=".CreatedSprintList" />
        <activity android:name=".GrantAdminRole" />
        <activity android:name=".SprintDetails" />
        <activity android:name=".BacklogDetails" />
        <activity android:name=".EffortSpentOnBacklog" />
        <activity android:name=".CreateNewSprint" />
        <activity android:name=".AddDeveloper" />
        <activity android:name=".AddNewBacklog"></activity>
    </application>

</manifest>